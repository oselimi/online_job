<% unless expired(@job.deadline) %>
<div class="container mt-4">
  <div class="row">
    <div class="col-8 border rounded bg-light">
      <h2 class="text-center mt-4"><%= @job.title%></h2>
      <h6 class="text-center" style="color:gray">creator: <%= @job.user.full_name%></h6>
      <div class="row">
        <% if logged_in? && current_user?(@job.user) %>
          <div class="col">
            <%= link_to "Edit", edit_job_path(@job), class:"btn btn-warning" %>
            <%= link_to "Delete", job_path(@job), method: :delete, data: {confirm: "Are you sure?" }, class:"btn btn-danger" %>
          </div>
        <% end %>
      </div>
      <p><%= @job.description %></p>
       <div class="row justify-content-between border-top" style="background-color:#FDF5E6">
        <div class="col">
         Email: <%= @job.user.email %>
        </div>
        <div class="col">
         Category: <%= @job.category %>
        </div>
        <div class="col">
         Expired: <%= @job.deadline.strftime("%d/%m/%Y") %>
        </div>
       </div>
    </div>
    <div class="col-4" style="background-color:green">
     <form>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </div>
  </div>
</div>
<% end %>